<%- layout('layouts/main.ejs') %>
    <h1>Perfil del Usuario</h1>

    <div class="card card-body">
        <h2>
            <%= user.name%>
        </h2>
        <h3>
            <%= user.email %>
        </h3>
        <h3>
            <%= user.address %>
        </h3>
        <p>
            <%= user.phone %>
        </p>
        <p>
            <%= user.password %>
        </p>
        <p>
            <%= user._id %>
        </p>
        <p>
            <%= user. createdAt %>
        </p>
    </div>